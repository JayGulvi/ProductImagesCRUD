<form asp-action="Update" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="exampleInputEmail1">Product ID</label>
        <input type="text" class="form-control" asp-for="Id" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="enter product name">
        <span asp-validation-for="Id"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Product Photo</label>
        <input type="file" class="form-control" asp-for="ProPhoto">
        <span asp-validation-for="ProPhoto"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Product Name</label>
        <input type="text" class="form-control" asp-for="ProName" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="enter product name">
        <span asp-validation-for="ProName"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Description</label>
        <input type="text" class="form-control" asp-for="Description" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="enter product description">
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Product Price</label>
        <input type="text" class="form-control" asp-for="Price" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="enter price">
        <span asp-validation-for="Price"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Update</button><br />
    <a asp-action="Index">back to list</a>
</form>